<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" stylesheets="@css/table.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.gustavoakira.dentist.boundary.ServiceBoundary" >
    <Label styleClass="title" text="Serviços" />
   <Button fx:id="addButton" mnemonicParsing="false" text="Add" />
   <TableView fx:id="servicesTableView" prefWidth="200.0" VBox.vgrow="ALWAYS">
     <columns>
       <TableColumn fx:id="id" prefWidth="75.0" text="Id" />
       <TableColumn fx:id="name" prefWidth="75.0" text="Nome" />
         <TableColumn fx:id="price" prefWidth="75.0" text="Preço" />
         <TableColumn fx:id="edit" prefWidth="75.0" text="Edit" />
         <TableColumn fx:id="delete" prefWidth="75.0" text="Delete" />
     </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>

</VBox>
